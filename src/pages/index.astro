---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout title="xiaorona's homepage">
  <Header />
  
  <div class="page active" id="home">
    <div class="content">
      <img src="/images/avatar.png" alt="Avatar" class="avatar">
      <div class="nickname">xiaorona</div>
      <div class="about-content">
        <h2 style="color: #FE7BB5;">Hello!</h2>
        <h3 style="color: #B3B1FE;">这里是xiaorona的主页~</h3>
        <div class="hitokoto-container">
          <div class="hitokoto-header">
            <span class="hitokoto-icon">💭</span>
            <span class="hitokoto-title">今日一言</span>
            <button id="refresh-hitokoto" class="refresh-btn" title="换一句">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="23 4 23 10 17 10"></polyline>
                <polyline points="1 20 1 14 7 14"></polyline>
                <path d="m3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path>
              </svg>
            </button>
          </div>
          <div class="hitokoto-content">
            <p id="hitokoto" class="hitokoto-text">加载中...</p>
            <p id="hitokoto-from" class="hitokoto-from"></p>
          </div>
        </div>
      </div>
    </div>
    <Footer />
  </div>

  <style>
    /* 昵称样式 */
    .nickname {
      font-size: 24px;
      font-weight: 600;
      color: #FE7BB5;
      text-align: center;
      margin: 15px 0 25px 0;
      text-shadow: 0 2px 4px rgba(254, 123, 181, 0.2);
      letter-spacing: 1px;
    }

    /* 一言容器 - 新的渐变背景设计 */
    .hitokoto-container {
      margin-top: 20px;
      background: linear-gradient(135deg, 
        rgba(254, 123, 181, 0.1) 0%, 
        rgba(179, 177, 254, 0.1) 50%, 
        rgba(255, 240, 245, 0.8) 100%);
      border-radius: 20px;
      border: 1px solid rgba(254, 123, 181, 0.2);
      box-shadow: 0 8px 32px rgba(254, 123, 181, 0.1);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
    }

    .hitokoto-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, #FE7BB5, #B3B1FE, #FE7BB5);
      background-size: 200% 100%;
      animation: shimmer 3s ease-in-out infinite;
    }

    @keyframes shimmer {
      0%, 100% { background-position: 200% 0; }
      50% { background-position: -200% 0; }
    }

    .hitokoto-container:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 40px rgba(254, 123, 181, 0.2);
      border-color: rgba(254, 123, 181, 0.3);
    }

    /* 一言头部 */
    .hitokoto-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 16px 20px 12px 20px;
      border-bottom: 1px solid rgba(254, 123, 181, 0.1);
    }

    .hitokoto-icon {
      font-size: 18px;
      margin-right: 8px;
    }

    .hitokoto-title {
      font-size: 14px;
      font-weight: 600;
      color: #FE7BB5;
      flex-grow: 1;
      letter-spacing: 0.5px;
    }

    /* 新的刷新按钮设计 */
    .refresh-btn {
      background: linear-gradient(135deg, #FE7BB5, #B3B1FE);
      border: none;
      border-radius: 12px;
      padding: 8px;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      color: white;
      box-shadow: 0 2px 8px rgba(254, 123, 181, 0.3);
      position: relative;
      overflow: hidden;
    }

    .refresh-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.5s;
    }

    .refresh-btn:hover::before {
      left: 100%;
    }

    .refresh-btn:hover {
      transform: scale(1.1) rotate(180deg);
      box-shadow: 0 4px 16px rgba(254, 123, 181, 0.4);
    }

    .refresh-btn:active {
      transform: scale(0.95) rotate(180deg);
    }

    .refresh-btn svg {
      display: block;
      transition: transform 0.3s ease;
    }

    /* 一言内容区域 */
    .hitokoto-content {
      padding: 16px 20px 20px 20px;
    }

    .hitokoto-text {
      font-size: 16px;
      line-height: 1.7;
      color: #333;
      margin: 0 0 12px 0;
      font-style: italic;
      min-height: 24px;
      transition: opacity 0.3s ease;
      position: relative;
      padding-left: 16px;
    }

    .hitokoto-text::before {
      content: '"';
      position: absolute;
      left: 0;
      top: -2px;
      font-size: 24px;
      color: #FE7BB5;
      font-family: serif;
      opacity: 0.6;
    }

    .hitokoto-text::after {
      content: '"';
      font-size: 24px;
      color: #FE7BB5;
      font-family: serif;
      opacity: 0.6;
      margin-left: 4px;
    }

    .hitokoto-from {
      font-size: 13px;
      color: #888;
      text-align: right;
      margin: 0;
      font-weight: 500;
      opacity: 0.8;
    }

    /* 加载状态 */
    .loading {
      opacity: 0.7;
    }

    .loading .refresh-btn svg {
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .hitokoto-container.fade-in {
      animation: fadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* 移动端适配 */
    @media (max-width: 768px) {
      .nickname {
        font-size: 20px;
        margin: 12px 0 20px 0;
      }

      .hitokoto-container {
        margin: 15px 0;
        border-radius: 16px;
      }
      
      .hitokoto-header {
        padding: 14px 16px 10px 16px;
      }

      .hitokoto-content {
        padding: 14px 16px 16px 16px;
      }
      
      .hitokoto-text {
        font-size: 15px;
        padding-left: 14px;
      }
      
      .hitokoto-from {
        font-size: 12px;
      }

      .refresh-btn {
        padding: 6px;
        border-radius: 10px;
      }

      .refresh-btn svg {
        width: 14px;
        height: 14px;
      }
    }
  </style>

  <script>
    // 一言API功能
    class HitokotoManager {
      constructor() {
        this.hitokotoElement = document.getElementById('hitokoto');
        this.fromElement = document.getElementById('hitokoto-from');
        this.refreshBtn = document.getElementById('refresh-hitokoto');
        this.container = document.querySelector('.hitokoto-container');
        this.isLoading = false;
        
        this.init();
      }
      
      init() {
        // 页面加载时获取一言
        this.fetchHitokoto();
        
        // 绑定刷新按钮事件
        if (this.refreshBtn) {
          this.refreshBtn.addEventListener('click', () => {
            this.fetchHitokoto();
          });
        }
        
        // 每30分钟自动刷新一次
        setInterval(() => {
          this.fetchHitokoto();
        }, 30 * 60 * 1000);
      }
      
      async fetchHitokoto() {
        if (this.isLoading) return;
        
        this.isLoading = true;
        this.container?.classList.add('loading');
        
        try {
          const response = await fetch('https://v1.hitokoto.cn', {
            method: 'GET',
            headers: {
              'Accept': 'application/json',
            }
          });
          
          if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
          }
          
          const data = await response.json();
          this.displayHitokoto(data);
          
        } catch (error) {
          console.error('获取一言失败:', error);
          this.displayError();
        } finally {
          this.isLoading = false;
          this.container?.classList.remove('loading');
        }
      }
      
      displayHitokoto(data) {
        if (this.hitokotoElement && this.fromElement) {
          // 淡出效果
          this.hitokotoElement.style.opacity = '0';
          this.fromElement.style.opacity = '0';
          
          setTimeout(() => {
            this.hitokotoElement.textContent = data.hitokoto || '今天也要加油哦~';
            
            let fromText = '';
            if (data.from) {
              fromText = `—— ${data.from}`;
              if (data.from_who) {
                fromText += ` · ${data.from_who}`;
              }
            }
            this.fromElement.textContent = fromText;
            
            // 淡入效果
            this.hitokotoElement.style.opacity = '1';
            this.fromElement.style.opacity = '1';
            this.container?.classList.add('fade-in');
            
            setTimeout(() => {
              this.container?.classList.remove('fade-in');
            }, 500);
          }, 150);
        }
      }
      
      displayError() {
        if (this.hitokotoElement && this.fromElement) {
          this.hitokotoElement.textContent = '今天也要保持好心情哦~ ✨';
          this.fromElement.textContent = '—— 来自喵喵的祝福';
        }
      }
    }
    
    // 初始化一言管理器
    function initHitokoto() {
      new HitokotoManager();
    }
    
    // 多种初始化方式确保兼容性
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHitokoto);
    } else {
      initHitokoto();
    }
    
    // Astro ViewTransitions 支持
    document.addEventListener('astro:page-load', initHitokoto);
  </script>
</MainLayout>